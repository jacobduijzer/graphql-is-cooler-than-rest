@page
@inject ISnackFlixClient SnackflixClient
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center container">
    <h1>Strawberry Shake GraphQL Client Demo</h1>
    <h2>🎬 Movie Detail Page</h2>

    <div class="content">
        @if (Model.Movie != null)
        {
            <div class="movie-card">
                <h2>@Model.Movie.Title (@Model.Movie.Year)</h2>
                <p><strong>Genres:</strong>@string.Join(", ", Model.Movie.Genres)</p>
                <p>@Model.Movie.Description</p>
            </div>
        }


        <div class="side-section">
            @if (Model.Genres != null)
            {
                <h3>Available Genres</h3>
                <ul class="genres">
                    @foreach (var genre in Model.Genres)
                    {
                        <li>@genre</li>
                    }
                </ul>
            }

            @if (Model.Movies != null)
            {
                <h3>All Movies</h3>
                <ul class="movies">
                    @foreach (var movie in Model.Movies)
                    {
                        <li>@movie.Title</li>
                    }
                </ul>
            }
        </div>
    </div>
</div>